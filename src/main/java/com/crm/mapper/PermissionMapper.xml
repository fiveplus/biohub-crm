<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.crm.dao.PermissionMapper">
	<cache type="com.crm.cache.MybatisRedisCache" />
	<resultMap type="com.crm.entity.Permission" id="BaseResultMap">
		<id column="id" property="id" jdbcType="VARCHAR" />
		<id column="name" property="name" jdbcType="VARCHAR" />
		<id column="parent_id" property="parentId" jdbcType="VARCHAR" />
		<id column="is_menu" property="isMenu" jdbcType="VARCHAR" />
		<id column="class_name" property="className" jdbcType="VARCHAR" />
		<id column="status" property="status" jdbcType="VARCHAR" />
		<id column="menu_index" property="menuIndex" jdbcType="INTEGER" />
		<id column="image_url" property="imageURL" jdbcType="VARCHAR" />
		<id column="url" property="url" jdbcType="VARCHAR" />
		<id column="create_time" property="createTime" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id,name,parent_id,is_menu,class_name,status,menu_index,image_url,url,create_time
	</sql>
	<select id="getParentMenu" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" /> from sys_permission where is_menu = 'Y' and status = 'Y' and parent_id = 'admin' order by menu_index ASC
	</select>
	<select id="getChildPermission" resultMap="BaseResultMap">
		select p.<include refid="Base_Column_List" /> from sys_dept_permission dp left join sys_permission p on dp.permission_id = p.id where dp.dept_id = #{deptId,jdbcType=VARCHAR} and p.status = 'Y' order by p.menu_index ASC 
	</select>
	
	
</mapper>